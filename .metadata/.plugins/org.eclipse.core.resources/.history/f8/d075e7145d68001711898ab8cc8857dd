<script type="text/javascript">
  var mySidenav = $("#mySidenav")

  $("#menu").on( "click", function() {
    mySidenav.toggle("slide", 500 );
  });
  $("#close").on( "click", function() {
    mySidenav.toggle("slide", 500 );
  });
</script>
  <script src="http://code.jquery.com/jquery-latest.min.js"></script>
